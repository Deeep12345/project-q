  <style rel="stylesheet">
    .waiting {
      width: 100%;
      position: absolute;
      height: 100%;
      top: 0px;
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      left: 0px;
    }

    .waiting>span {
      width: 7px;
      height: 7px;
      -webkit-backdrop-filter: blur(10px);
      backdrop-filter: blur(10px);
      background-color: #fff;
      margin: 0 5px;

      border-radius: 50%;
      display: inline-block;
      animation-name: dots;
      animation-duration: 2s;
      animation-iteration-count: infinite;
